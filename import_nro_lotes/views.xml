           <field name="inherit_id" ref="stock.view_picking_form"/>
           <field name="arch" type="xml">
               <xpath expr="//notebook" position="inside">
                    <page invisible="state != 'draft'" string="ImportaciÃ³n de Saldos Iniciales" groups="import_nro_lotes.groupcanimportsaldoinic">
